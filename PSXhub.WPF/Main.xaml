                                        <!--           Click="DonateUSDT_OnClick"/> -->
                                    </MenuItem>

                                    <MenuItem Margin="-15,0,0,0"
                                              Cursor="Hand"
                                              Header="Buy me Coffee (only Iranians)"
                                              Name="Coffee"
                                              Click="Coffee_OnClick"/>

                                </MenuItem>

