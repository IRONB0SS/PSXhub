<Window x:Class="PSXhub.WPF.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pu="https://opensource.panuon.com/wpf-ui"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Height="600" Width="785"
        MinHeight="600" MinWidth="710"
        Background="Transparent"
        Foreground="White"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize"
        Closing="Main_OnClosing"
        PreviewKeyDown="Main_OnPreviewKeyDown"
        FontFamily="{Binding Font, Mode=TwoWay}">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                      NonClientFrameEdges="None"
                      CaptionHeight="0"
                      CornerRadius="0"
                      ResizeBorderThickness="8"/>
    </WindowChrome.WindowChrome>
    <Grid
        Background="#0d1017">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="217*"></RowDefinition>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <tb:TaskbarIcon Grid.Row="0" x:Name="TaskbarIcon"
                        IconSource="/Images/PSX.ico" Visibility="Collapsed"
                        TrayLeftMouseDown="TaskbarIcon_OnTrayLeftMouseDown"
                        TrayRightMouseDown="TaskbarIcon_OnTrayRightMouseDown">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu
                    Name="TaskbarMenu"
                    StaysOpen="True"
                    Background="#151b23"
                    Foreground="#f0f6fc"
                    FontWeight="Regular"
                    FontSize="14"
                    pu:ContextMenuHelper.CornerRadius="8"
                    BorderThickness="0"
                    pu:ContextMenuHelper.ItemsHoverBackground="#222931"
                    VerticalOffset="-400">
                    <MenuItem
                        Cursor="Hand"
                        Margin="-15,0,0,0"
                        Header="Exit"
                        Name="TaskbarExit"
                        Click="TaskbarExit_OnClick"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <Grid VerticalAlignment="Center" Background="#010409" Height="50" Name="TitleBar" MouseDown="TitleBar_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*"></ColumnDefinition>
                <ColumnDefinition Width="60*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="1" HorizontalAlignment="Right"
                       Margin="10,0,0,0" Height="50">
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Foreground="#9198A1" Background="Transparent"
                            Width="36" Height="36" FontSize="24"
                            VerticalAlignment="Center"
                            pu:ButtonHelper.CornerRadius="4"
                            BorderThickness="1"
                            BorderBrush="#3d444d"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Name="Search_btn" Click="Search_btn_Click"
                            IsEnabled="False">
                        <DockPanel>
                            <Viewbox Width="20" Height="20"
                                     Margin="-2,-1,0,0">
                                <Path Fill="#9198A1" Data="M10.68 11.74a6 6 0 0 1-7.922-8.982 6 6 0 0 1 8.982 7.922l3.04 3.04a.749.749 0 0 1-.326 1.275.749.749 0 0 1-.734-.215ZM11.5 7a4.499 4.499 0 1 0-8.997 0A4.499 4.499 0 0 0 11.5 7Z">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Viewbox>

                            <Popup
                                Name="SearchBoxPopup"
                                Placement="Center"
                                HorizontalOffset="-92"
                                VerticalOffset="177"
                                StaysOpen="False"
                                Opened="SearchBoxPopup_OnOpened"
                                Closed="SearchBoxPopup_OnClosed"
                                AllowsTransparency="True"
                                MouseDown="SearchBoxPopup_OnMouseDown">
                                <StackPanel
                                    Orientation="Vertical"
                                    Background="Transparent"
                                    Name="SearchBoxPopupStackPanel">
                                    <Border BorderBrush="#1f6feb" BorderThickness="1"
                                            Margin="0" Padding="0"
                                            CornerRadius="4" Name="SearchBox_Border"
                                            Height="36" VerticalAlignment="Center"
                                            Width="218"
                                            Background="#0d1017">
                                        <StackPanel
                                            Orientation="Horizontal">
                                            <Button
                                                Cursor="Hand"
                                                Background="Transparent"
                                                Name="AppendSearch"
                                                Click="AppendSearch_OnClick"
                                                Margin="5,0,0,0">
                                                <Viewbox Width="20" Height="20"
                                                         Margin="-2,-1,0,0">
                                                    <Path Fill="#9198A1" Data="M10.68 11.74a6 6 0 0 1-7.922-8.982 6 6 0 0 1 8.982 7.922l3.04 3.04a.749.749 0 0 1-.326 1.275.749.749 0 0 1-.734-.215ZM11.5 7a4.499 4.499 0 1 0-8.997 0A4.499 4.499 0 0 0 11.5 7Z">
                                                        <Path.RenderTransform>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </Path.RenderTransform>
                                                    </Path>
                                                </Viewbox>
                                            </Button>
                                            <TextBox TextAlignment="Left"
                                                     pu:TextBoxHelper.Watermark="Search Online Database"
                                                     FontSize="14" HorizontalAlignment="Stretch" Height="36"
                                                     Background="Transparent" BorderThickness="0" Foreground="#9da0a5"
                                                     x:Name="SearchBox"
                                                     Padding="4,0,4,0" VerticalAlignment="Center"
                                                     Width="165"
                                                     KeyUp="SearchBox_OnKeyUp"/>
                                            <Button
                                                Cursor="Hand"
                                                Background="#656C76"
                                                pu:ButtonHelper.HoverBackground="#1F6FEB"
                                                Name="CloseSearch"
                                                Click="CloseSearch_OnClick"
                                                Width="17" Height="17"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                Margin="-8,0,0,0">
                                                <Viewbox Width="10" Height="10"
                                                         Margin="-3,-2,0,0">
                                                    <Path Fill="#FFFFFF" Data="M3.72 3.72a.75.75 0 0 1 1.06 0L8 6.94l3.22-3.22a.749.749 0 0 1 1.275.326.749.749 0 0 1-.215.734L9.06 8l3.22 3.22a.749.749 0 0 1-.326 1.275.749.749 0 0 1-.734-.215L8 9.06l-3.22 3.22a.751.751 0 0 1-1.042-.018.751.751 0 0 1-.018-1.042L6.94 8 3.72 4.78a.75.75 0 0 1 0-1.06Z">
                                                        <Path.RenderTransform>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </Path.RenderTransform>
                                                    </Path>
                                                </Viewbox>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                    <Border
                                        BorderBrush="#6f6f6f"
                                        BorderThickness="2"
                                        CornerRadius="12"
                                        Background="#0d1017"
                                        Margin="0,20,0,0">
                                        <StackPanel
                                            Width="470"
                                            Height="330">
                                            <StackPanel
                                                Width="470"
                                                Height="330"
                                                VerticalAlignment="Center"
                                                Name="NullSearch">
                                                <Grid
                                                    Width="470"
                                                    Height="330">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"></RowDefinition>
                                                        <RowDefinition Height="2*"></RowDefinition>
                                                        <RowDefinition Height="*"></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <TextBlock
                                                        Foreground="#e1e8ed"
                                                        Grid.Row="1"
                                                        FontSize="18"
                                                        FontWeight="Bold"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                        Enter Game Title or TitleID to search
                                                    </TextBlock>
                                                    <WrapPanel Grid.Row="2"
                                                               HorizontalAlignment="Center">
                                                        <Button
                                                            Background="#212830"
                                                            Foreground="#9198A1"
                                                            pu:ButtonHelper.CornerRadius="4" Cursor="Hand"
                                                            Padding="8,10"
                                                            pu:ButtonHelper.HoverBackground="#252c34"
                                                            Name="AddToDatabase_btn"
                                                            Click="AddToDatabase_btn_OnClick"
                                                            FontSize="14">
                                                            Add to Database
                                                        </Button>
                                                    </WrapPanel>
                                                </Grid>
                                            </StackPanel>
                                            <StackPanel
                                                Width="470"
                                                Height="330"
                                                VerticalAlignment="Center"
                                                Name="NotFoundSearch"
                                                Visibility="Collapsed">
                                                <Grid
                                                    Width="470"
                                                    Height="330">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"></RowDefinition>
                                                        <RowDefinition Height="*"></RowDefinition>
                                                        <RowDefinition Height="*"></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <TextBlock
                                                        Foreground="#e1e8ed"
                                                        Grid.Row="1"
                                                        FontSize="18"
                                                        FontWeight="Bold"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                        Game not found!
                                                    </TextBlock>
                                                </Grid>
                                            </StackPanel>
                                            <ListBox
                                                Name="SearchResultList"
                                                Visibility="Collapsed"
                                                HorizontalAlignment="Stretch"
                                                Height="330"
                                                SelectionChanged="SearchResultList_OnSelectionChanged"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                pu:ListBoxHelper.ItemsSelectedBackground="#151b23"
                                                pu:ListBoxHelper.ItemsHoverBackground="#151b23"
                                                Margin="10"
                                                pu:ListBoxHelper.CornerRadius="8"
                                                pu:ListBoxHelper.ItemsCornerRadius="8"
                                                Cursor="Hand"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                VirtualizingStackPanel.IsVirtualizing="True"
                                                VirtualizingStackPanel.VirtualizationMode="Standard"
                                                pu:ScrollBarHelper.ThumbBackground="#9f9f9f"
                                                pu:ScrollBarHelper.ThumbCornerRadius="4"
                                                pu:ListBoxHelper.ItemsMargin="0,2.5">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="10"
                                                              x:Name="SearchResultGrid">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition
                                                                    Width="20*"></ColumnDefinition>
                                                                <ColumnDefinition
                                                                    Width="80*"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid Grid.Column="0">
                                                                <Border Canvas.Left="55"
                                                                        Canvas.Top="30"
                                                                        Margin="0"
                                                                        BorderBrush="#FF3B5998"
                                                                        BorderThickness="0"
                                                                        CornerRadius="18">
                                                                    <Border.Effect>
                                                                        <DropShadowEffect BlurRadius="5"
                                                                                          Opacity=".5"
                                                                                          ShadowDepth="3" />
                                                                    </Border.Effect>
                                                                    <Border Name="ReceiverColor"
                                                                            BorderBrush="#FF96B2E4"
                                                                            BorderThickness="0"
                                                                            CornerRadius="15">
                                                                        <Grid>
                                                                            <Border Name="Mask"
                                                                                    Background="#0d1017"
                                                                                    BorderBrush="#0d1017"
                                                                                    BorderThickness="1"
                                                                                    CornerRadius="4">
                                                                            </Border>
                                                                            <StackPanel>
                                                                                <Image Name="Receiver"
                                                                                       Source="{Binding Image}" />
                                                                                <StackPanel.OpacityMask>
                                                                                    <VisualBrush Visual="{Binding ElementName=Mask}" />
                                                                                </StackPanel.OpacityMask>
                                                                            </StackPanel>
                                                                        </Grid>
                                                                    </Border>
                                                                </Border>
                                                            </Grid>
                                                            <DockPanel Grid.Column="1"
                                                                       VerticalAlignment="Center"
                                                                       Margin="20,10">
                                                                <StackPanel
                                                                    DockPanel.Dock="Top"
                                                                    Orientation="Horizontal">
                                                                    <TextBlock
                                                                        Foreground="#9198A1"
                                                                        FontSize="18"
                                                                        FontWeight="SemiBold"
                                                                        HorizontalAlignment="Left"
                                                                        TextWrapping="Wrap"
                                                                        Text="{Binding BeforeMatch}"/>
                                                                    <TextBlock
                                                                        Foreground="#f1e05a"
                                                                        FontSize="18"
                                                                        FontWeight="SemiBold"
                                                                        HorizontalAlignment="Left"
                                                                        TextWrapping="Wrap"
                                                                        Text="{Binding MatchedText}"/>
                                                                    <TextBlock
                                                                        Foreground="#9198A1"
                                                                        FontSize="18"
                                                                        FontWeight="SemiBold"
                                                                        HorizontalAlignment="Left"
                                                                        TextWrapping="Wrap"
                                                                        Text="{Binding AfterMatch}"/>
                                                                </StackPanel>
                                                                <StackPanel
                                                                    DockPanel.Dock="Bottom"
                                                                    Margin="0,15,0,0"
                                                                    Orientation="Horizontal">

                                                                    <TextBlock
                                                                        Foreground="#4493f8"
                                                                        FontSize="14"
                                                                        Margin="5,0"
                                                                        Text="{Binding Region}"/>

                                                                    <TextBlock
                                                                        FontSize="14"
                                                                        Foreground="#db61a2"
                                                                        Margin="10,0"
                                                                        Text="{Binding GameTitle}" />

                                                                    <Image
                                                                        Source="Images/ps5.png"
                                                                        Width="27.6"  Height="15"
                                                                        Margin="10,0"/>

                                                                    <Border
                                                                        Width="1"
                                                                        HorizontalAlignment="Stretch"
                                                                        Background="#3d444d"
                                                                        Margin="10,0"></Border>

                                                                    <Button
                                                                        Margin="10,0"
                                                                        Background="Transparent">
                                                                        <Viewbox Width="20" Height="20"
                                                                                 Margin="-2,-3,0,0">
                                                                            <Path Fill="#9198A1" Data="M8 16a2 2 0 0 0 1.985-1.75c.017-.137-.097-.25-.235-.25h-3.5c-.138 0-.252.113-.235.25A2 2 0 0 0 8 16ZM3 5a5 5 0 0 1 10 0v2.947c0 .05.015.098.042.139l1.703 2.555A1.519 1.519 0 0 1 13.482 13H2.518a1.516 1.516 0 0 1-1.263-2.36l1.703-2.554A.255.255 0 0 0 3 7.947Zm5-3.5A3.5 3.5 0 0 0 4.5 5v2.947c0 .346-.102.683-.294.97l-1.703 2.556a.017.017 0 0 0-.003.01l.001.006c0 .002.002.004.004.006l.006.004.007.001h10.964l.007-.001.006-.004.004-.006.001-.007a.017.017 0 0 0-.003-.01l-1.703-2.554a1.745 1.745 0 0 1-.294-.97V5A3.5 3.5 0 0 0 8 1.5Z">
                                                                                <Path.RenderTransform>
                                                                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                                                </Path.RenderTransform>
                                                                            </Path>
                                                                        </Viewbox>
                                                                    </Button>
                                                                </StackPanel>
                                                            </DockPanel>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Popup>
                        </DockPanel>
                    </Button>
                    <Button Foreground="#9198A1" Background="Transparent"
                            Width="36" Height="36" FontSize="24"
                            VerticalAlignment="Center"
                            pu:ButtonHelper.CornerRadius="4"
                            BorderThickness="1"
                            BorderBrush="#3d444d"
                            Margin="0,0,10,0"
                            x:Name="Inbox_btn" Click="Inbox_btn_Click"
                            Cursor="Hand">
                        <StackPanel>
                            <Popup
                                Name="Inbox"
                                StaysOpen="False"
                                PlacementTarget="{Binding ElementName=Inbox_btn}"
                                Placement="Bottom"
                                HorizontalOffset="-150"
                                VerticalOffset="5">
                                <Border
                                    Padding="20,30"
                                    BorderThickness="3"
                                    BorderBrush="#3d444d"
                                    CornerRadius="8">
                                    <StackPanel
                                        Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Width="300">
                                        <Image
                                            Source="Images/Inbox-zero.png"
                                            Width="250"></Image>
                                        <TextBlock
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="#F0F6FC"
                                            TextAlignment="Center"
                                            Margin="0,20,0,0">
                                            All done here!
                                        </TextBlock>
                                        <TextBlock
                                            FontSize="14"
                                            Foreground="#9198A1"
                                            TextAlignment="Center"
                                            Margin="0,10,0,0">
                                            You're all caught up! No new updates.
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Popup>
                            <Viewbox Width="18" Height="18"
                                     Margin="0,-1.5,0,0">
                                <Path Fill="#9198A1" Data="M2.8 2.06A1.75 1.75 0 0 1 4.41 1h7.18c.7 0 1.333.417 1.61 1.06l2.74 6.395c.04.093.06.194.06.295v4.5A1.75 1.75 0 0 1 14.25 15H1.75A1.75 1.75 0 0 1 0 13.25v-4.5c0-.101.02-.202.06-.295Zm1.61.44a.25.25 0 0 0-.23.152L1.887 8H4.75a.75.75 0 0 1 .6.3L6.625 10h2.75l1.275-1.7a.75.75 0 0 1 .6-.3h2.863L11.82 2.652a.25.25 0 0 0-.23-.152Zm10.09 7h-2.875l-1.275 1.7a.75.75 0 0 1-.6.3h-3.5a.75.75 0 0 1-.6-.3L4.375 9.5H1.5v3.75c0 .138.112.25.25.25h12.5a.25.25 0 0 0 .25-.25Z">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    <Button Foreground="#9198A1" Background="Transparent"
                            Width="36" Height="36" FontSize="24"
                            VerticalAlignment="Center" Click="More_Click"
                            pu:ButtonHelper.CornerRadius="4"
                            BorderThickness="1"
                            BorderBrush="#3d444d"
                            Name="Menu" Cursor="Hand">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="DropdownMenu"
                                         Background="#151b23"
                                         Foreground="#f0f6fc"
                                         FontWeight="Regular"
                                         FontSize="14"
                                         pu:ContextMenuHelper.CornerRadius="8"
                                         BorderThickness="0"
                                         pu:ContextMenuHelper.ItemsHoverBackground="#222931"
                                         HorizontalOffset="-20"
                                         VerticalOffset="-10"
                                         MinWidth="230">
                                <MenuItem Cursor="Hand"
                                          Margin="-15,0,0,0">
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <Viewbox Width="16" Height="16"
                                                     Margin="0">
                                                <Path Fill="#9198A1" Data="m8 14.25.345.666a.75.75 0 0 1-.69 0l-.008-.004-.018-.01a7.152 7.152 0 0 1-.31-.17 22.055 22.055 0 0 1-3.434-2.414C2.045 10.731 0 8.35 0 5.5 0 2.836 2.086 1 4.25 1 5.797 1 7.153 1.802 8 3.02 8.847 1.802 10.203 1 11.75 1 13.914 1 16 2.836 16 5.5c0 2.85-2.045 5.231-3.885 6.818a22.066 22.066 0 0 1-3.744 2.584l-.018.01-.006.003h-.002ZM4.25 2.5c-1.336 0-2.75 1.164-2.75 3 0 2.15 1.58 4.144 3.365 5.682A20.58 20.58 0 0 0 8 13.393a20.58 20.58 0 0 0 3.135-2.211C12.92 9.644 14.5 7.65 14.5 5.5c0-1.836-1.414-3-2.75-3-1.373 0-2.609.986-3.029 2.456a.749.749 0 0 1-1.442 0C6.859 3.486 5.623 2.5 4.25 2.5Z">
                                                    <Path.RenderTransform>
                                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                    </Path.RenderTransform>
                                                </Path>
                                            </Viewbox>
                                            <TextBlock Margin="10,0,0,0">Donate</TextBlock>
                                        </StackPanel>
                                    </MenuItem.Header>

                                    <MenuItem Margin="-15,0,0,0" Cursor="Hand"
                                              Header="Buy me Coffee"
                                              Name="Donate"
                                              Click="Donate_OnClick">
                                        <!-- <MenuItem Margin="-15,0,0,0" Cursor="Hand" -->
                                        <!--           Header="Donate with Crypto" -->
                                        <!--           Name="DonateBTC" -->
                                        <!--           Click="DonateBTC_OnClick"/> -->
