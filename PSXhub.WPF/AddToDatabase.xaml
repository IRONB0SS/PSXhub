            <Border Grid.Row="2" Padding="10,10"
                    BorderThickness="0,0.5,0,0"
                    BorderBrush="#3d444d">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button
                        Margin="0,8"
                        Content="OK"
                        Width="95"
                        Padding="10,5"
                        Background="#222931"
                        Foreground="#FFFFFF"
                        FontSize="14"
                        Cursor="Hand"
                        BorderThickness="1"
                        BorderBrush="#3d444d"
                        pu:ButtonHelper.CornerRadius="5"
                        pu:ButtonHelper.HoverBackground="#252c34"
                        Name="Ok" Click="Ok_Click"/>
                </StackPanel>
