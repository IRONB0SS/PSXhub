            <Popup Grid.Row="2"
                   Name="Message"
                   Placement="Center"
                   VerticalOffset="160"
                   AllowsTransparency="True">
                <Border
                    Background="#0e1118"
                    Padding="15,10"
                    CornerRadius="4">
                    <TextBlock
                        Foreground="#F0F6FC"
                        FontSize="12"
                        Name="MessageText"
                        MaxWidth="200"
                        TextWrapping="WrapWithOverflow"/>
                </Border>
