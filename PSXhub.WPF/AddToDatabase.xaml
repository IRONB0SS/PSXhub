                        <StackPanel
                            Margin="0,15">
                            <Border
                                Background="#0e1118"
                                BorderThickness="0"
                                CornerRadius="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBox
                                        Grid.Column="0"
                                        Background="Transparent"
                                        Height="50"
                                        FontSize="14"
                                        Margin="10,0"
                                        BorderThickness="0"
                                        Foreground="#9198A1"
                                        pu:TextBoxHelper.Watermark="Paste supported file link here..."
